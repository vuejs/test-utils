{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "module": "esnext",
    "lib": ["DOM", "ES2015", "ES2017"],
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "vue": [
        "node_modules/vue/dist/vue.esm.js"
      ]
    }
  },
  "include": [
    "tests",
    "src",
    "types"
  ],
  "vueCompilerOptions": {
    "experimentalExposeScriptSetupContext": true
  }
}
